{% extends "CodasciiTutoBundle::layout.html.twig" %}

{% block body_tutoriels %}
	<div class="row" style="display: flex;flex-wrap:wrap">
		{% for language in languages %}
			<div class="col-lg-4 tutoriel">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">{{ language.name|upper }}</h3>
					</div>
					<div class="panel-body">
						<div class="left-content">
							<img src="{{ asset('images/languages/'~language.languageImage.name) }}" alt="{{language.languageImage.alt}}" class="img-responsive"></div>
						<div class="right-content">
							<p class="text-info">{{ language.shortDescription }}</p>
						</div>
					</div>
					<div class="panel-footer">
						<a href="{{ path('codascii_home_tuto')~language.name }}" class="text-danger">En savoir plus...</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}

{% block right_block %}
	{% for language in languages %}
		<div class="block">
			<div class="block-heading">
				<h4>{{ language.name|upper }}</h4>
			</div>
			<div class="list-group">
				<a href="javascript:void(0)" class="list-group-item">Test</a>
				<a href="javascript:void(0)" class="list-group-item">Test</a>
				<a href="javascript:void(0)" class="list-group-item">Test</a>
			</div>
		</div>
	{% endfor %}
{% endblock %}
